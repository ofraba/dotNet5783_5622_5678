<Window x:Class="PL.SimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SimulatorWindow" Height="450" Width="800"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="Stop_Simulator" Content="Stopping the simulator" HorizontalAlignment="Left" Margin="322,233,0,0" VerticalAlignment="Top" Height="66" Width="162" Click="Stop_Simulator_Click"/>
        <TextBlock x:Name="timerTextBlock" HorizontalAlignment="Left" Margin="287,40,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Top" Height="86" Width="232" FontSize="60"/>

    </Grid>
</Window>
